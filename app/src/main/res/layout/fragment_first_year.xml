<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="5dp"
    tools:context=".Staff.Maintanance.Year.FirstYearFragment">

    <RelativeLayout
        android:id="@+id/chip1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="serif"
            android:text="Subjects"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/routine_upload_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_baseline_add_24"
            android:drawablePadding="4dp"
            android:drawableTint="@color/primary"
            android:text="Add"
            android:textColor="@color/primary"
            app:tint="@color/primary" />



    </RelativeLayout>

    <ListView
        android:id="@+id/All_subjects"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chip1"
        android:layout_marginTop="17dp"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/show_routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/primary"
        android:contentDescription="TODO"
        android:elevation="3dp"
        android:src="@drawable/ic_baseline_routine_chart_24"
        android:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/show_syllebus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="@color/primary"
        android:contentDescription="TODO"
        android:elevation="3dp"
        android:src="@drawable/ic_baseline_routine_chart_24"
        android:tint="@color/white" />



</RelativeLayout>