<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff.Maintanance.Year.UploadSyllebus">


    <LinearLayout
        android:id="@+id/chip1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="@string/upload_syllebus"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-50dp"
            android:background="@null"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/white"
            tools:ignore="ContentDescription" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/chip1"
        android:background="@drawable/ic_wave1"
        android:backgroundTint="@color/primary"
        android:orientation="vertical">


    </LinearLayout>


    <ImageView
        android:id="@+id/upload_syllebus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle"
        android:contentDescription="@string/todo"
        android:elevation="5dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_cloud_upload_24"
        app:tint="@color/primary" />


    <TextView
        android:layout_below="@id/upload_syllebus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_syllebus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/primary"
        />


</RelativeLayout>