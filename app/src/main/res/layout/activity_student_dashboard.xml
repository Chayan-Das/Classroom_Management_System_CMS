<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Student.StudentDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.CardView"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pro_image"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:padding="6dp"
                android:src="@drawable/ic_outline_person_24"
                android:tint="@color/white" />

            <ImageButton
                android:id="@+id/manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/notifications"
                android:layout_marginRight="17dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_menu_book_24"
                app:tint="@color/primary" />

            <ImageButton
                android:id="@+id/notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/logout"
                android:layout_marginRight="17dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_notifications_24"
                app:tint="@color/primary" />

            <ImageButton
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:src="@drawable/ic_outline_power_settings_new_24"
                app:tint="@color/primary" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show_more"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/primary"
            android:visibility="gone">

            <TextView
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:text="Name :"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/p1"
                android:text="xxxx"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:text="Batch :"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/p2"
                android:text="xxxx"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p2"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:text="S.id :"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/s.id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p2"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/p3"
                android:text="xxxx"
                android:textColor="@color/white" />

            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="140dp"
                android:layout_marginBottom="10dp"
                android:background="#2E7BB5" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Role"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>




</RelativeLayout>